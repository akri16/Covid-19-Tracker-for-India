<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="StatisticsTextStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ToolbarTextApperance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/alfa_slab_one</item>
    </style>

    <style name="AppTheme.BottomSheetShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppTheme.sheetkey" parent="@style/TextAppearance.MaterialComponents.Headline6" >
        <item name= "android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.statsCirclesUpdatetv" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/news_date_round_bg</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>
